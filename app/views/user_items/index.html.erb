<h1 class="midashi mb-5">購入履歴画面</h1>
<% sum = 0 %>
<%@user_items1.each do |user_item1| %>
  <% user_item1.quantity %>
  <% user_item1.item.price %>
  <% sum_price = (user_item1.quantity.to_i)*(user_item1.item.price.to_i) %>
  <% sum += sum_price %>
<% end %>
<h2>購入合計：<%= sum %>円</h2>
<h3 class="rireki mt-4" style="width:180px;">購入履歴</h3>
<div class="mt-3">
  <ul class="list-unstyled">
    <% @user_items2.each do |user_item| %>
      <li class="media mb-3  border-bottom">
        <%if user_item.item.image.present? %>
          <img class="mr-2 rounded" src="<%= user_item.item.image %>" width="100" alt="">
        <%else%>
          <img class="mr-2 rounded"> <%= image_tag ('/uploads/tmp/NO_IMAGE.png'), :width =>'100' %></img>
        <%end%>
        <div class="media-body ">
          <% sum_price = (user_item.quantity.to_i)*(user_item.item.price.to_i) %>
          <p class="ml-4">商品名：<%= user_item.item.name %></p>
          <p class="ml-4">数量：<%= user_item.quantity %></p>
          <label class="ml-4">価格：<%= user_item.item.price %>円</label><label class="ml-5 border_black">合計額：<%= sum_price %>円</label>
        </div>
      </li>
    <% end %>
    <%= paginate @user_items2 %>
  </ul>
</div>



