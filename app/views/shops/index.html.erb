<h1>Shops#index</h1>
<p>Find me in app/views/shops/index.html.erb</p>

<div class="mt-3">
<ul class="list-unstyled">
  <% @items.each do |f| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= f.image %>" width="50" alt="">
      <div class="media-body">
          <p><%= f.name %></p>
      </div>
      <div>
        <%= link_to '商品詳細', f,class: 'btn btn-light' %>
      </div>
    </li>
  <% end %>
  <%= paginate @items %>
</ul>
</div>