<h1>商品購入画面</h1>

<div class="row">
  <div class="col-sm-3">
    <table class="table table-bordered">
      <tr>
        <td><%= link_to '全てのカテゴリ' ,shops_path %></td>
      </tr>
      <% category_all.each do |f| %>
      <tr>
        <td><%= link_to f.category ,category_path(id: f.id), method: :post %></td>
      </tr>
      <% end %>
    </table>
  </div>
<div class="col-sm-9">
<div>
  <%= form_with(scope: :search, url: shops_path, method: :get, local: true) do |f| %>
    <%= f.label(:name,'商品名検索') %>
    <%= f.text_field :name%>
    <%= f.submit('検索') %>
  <% end %>
</div>

<div class="mt-3">
  <ul class="list-unstyled">
    <% @items.each do |f| %>
      <li class="media mb-3">
        <img class="mr-2 rounded" src="<%= f.image %>" width="50" alt="">
        <div class="media-body">
            <p>商品名：<%= f.name %></p>
            <p>価格：<%= f.price %></p>
            <p>説明：<%= f.content %></p>
        </div>
        <div>
          <%= link_to '商品詳細', f,class: 'btn btn-light' %>
        </div>
      </li>
    <% end %>
    <%= paginate @items %>
  </ul>
</div>
</div>
</div>


