<h1><%= @item.name %>の商品ページ</h1>
<div class="row">
  <div class="col-sm-3">
    <div class="form-group">
        <img class="mr-2 rounded" src="<%= @item.image %>" width="200" alt="">
    </div>
  </div>

<div class="col-sm-9">
<table class="table table-bordered">
    <tr>
        <th>id</th>
        <td><%= @item.id %></td>
    </tr>
    <tr>
        <th>商品名</th>
        <td><%= @item.name %></td>
    </tr>
    <tr>
        <th>価格</th>
        <td><%= @item.price %></td>
    </tr>
    <tr>
        <th>カテゴリ</th>
        <td><%= @item.category.category %></td>
    </tr>
    <tr>
        <th>説明</th>
        <td><%= @item.content %></td>
    </tr>
</table>

<%=link_to 'この商品を編集する',edit_item_path(@item),class: 'btn btn-light'%>
<%= link_to 'この商品を削除する', @item, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
</div>