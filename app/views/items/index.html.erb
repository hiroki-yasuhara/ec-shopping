<h1>Items#index</h1>
<p>Find me in app/views/items/index.html.erb</p>
<%= link_to '商品を新規登録する', new_item_path, class: "btn btn-primary" %>

<div class="mt-3">
<ul class="list-unstyled">
  <% @items.each do |f| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= f.image %>" width="50" alt="">
      <div class="media-body">
          <p><%= f.name %></p>
      </div>
    </li>
  <% end %>
  <%= paginate @items %>
</ul>
</div>