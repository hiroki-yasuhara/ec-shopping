<h1>商品登録画面</h1>

<%= link_to '商品を新規登録する', new_item_path, class: "btn btn-primary" %>

<div class="mt-3">
<ul class="list-unstyled">
  <% @items.each do |f| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= f.image %>" width="50" alt="">
      <div class="media-body">
          <p><%= f.name %></p>
      </div>
      <div>
        <%= link_to '商品詳細', f,class: 'btn btn-light' %>
      </div>
    </li>
  <% end %>
  <%= paginate @items %>
</ul>
</div>