<%= form_with(model: @item, local: true,method: :put,) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
<div class="row">
  <aside class="col-sm-12 col-md-4">
    <div class="form-group">
      <img class="mr-2 rounded" src="<%= @item.image %>" width="200" alt="">
      <%= f.file_field :image %>
    </div>
  </aside>

  <div class="col-sm-12 col-md-8">
    <div class="form-group">
      <%= f.label :name, '商品名' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :price, '価格' %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :category, 'カテゴリー' %>
      <div>
        <%= f.collection_select :category_id, Category.all,:id,:category,class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :content, '説明' %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
  
    <%= f.submit '商品編集', class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
